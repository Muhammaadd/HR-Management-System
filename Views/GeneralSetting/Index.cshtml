@model GeneralSettingViewModel
@{
    ViewData["Title"] = "Index";
}
<div class="card">
  <div class="card-header">
    <div class="card-title-wrap bar-success">
      <h4 class="card-title" id="horz-layout-basic">General Settings Form</h4>
    </div>
    <p class="mb-0">
      This is the basic horizontal form with labels on left and cost estimation
      form is the default position.
    </p>
  </div>
  <div class="card-body">
    <div class="px-3">
      <form class="form form-horizontal" asp-action="Save" asp-controller="GeneralSetting">
        <div class="form-body">
          <h4 class="form-section">
            <i class="icon-user"></i>General information
          </h4>
          <div class="form-group row">
            <label class="col-md-3 label-control" asp-for="Extra"></label>
            <div class="col-md-9">
              <input type="text" class="form-control mb-1" asp-for="Extra" value="@Model.Extra"/>
              <span asp-validation-for="Extra" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-md-3 label-control" asp-for="Discount"> </label>
            <div class="col-md-9">
              <input type="text" class="form-control mb-1" asp-for="Discount" value="@Model.Discount" />
              <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-md-3 label-control" for="projectinput7"
              >Weekly Holidays:
            </label>
            <div class="col-md-9">
                @for(int i = 0 ; i< Model.DaysChecked.Count;i++)
                {           
                    <input hidden asp-for="@Model.DaysChecked[i].Day" />
                    <input asp-for="@Model.DaysChecked[i].Checked"/>
                    <label asp-for="@Model.DaysChecked[i].Checked">@Model.DaysChecked[i].Day</label>
                    <br />
                }
              <span asp-validation-for="DaysChecked" class="text-danger"></span>
            </div>
          </div>
        </div>
        <div class="form-actions">
          <a class="btn btn-danger mr-1">
            <i class="icon-trash"></i> Cancel
          </a>
          <button type="submit" class="btn btn-success">
            <i class="icon-note"></i> Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
