@model Employee


  <div class="form p-5 bg-white rounded-3">
      <h3 class="mb-4">Employee details</h3>
      <div class="row">
        <div class="left-content col-3">
          <img class="col-12" src="/app-assets/img/avatar-male.jpg" alt="">
          <h6 class="mt-3 fw-bolder text-center">@Model.Name</h6>
          <div class="mb-3 d-flex justify-content-center">
          <p class="text-primary text-center py-1 px-5">Employee</p>
          </div>
          <div class="field rounded-2 mb-2 p-2">
            <p>Department</p>
            @if(@Model.DeptId==0)
            {
                <p>No Department</p>
            }
            else
            {
                <p>@Model.Department.Name</p>    
            }
          </div>
          <div class="field rounded-2 mb-2 p-2">
            <p>Salary</p>
            <p>@Model.NetSalary</p>
          </div>
          <div class="field rounded-2 mb-2 p-2">
            <p>Start Time</p>
            <p>@Model.Start.ToString(@"hh\:mm")</p>
          </div>
          <div class="field rounded-2 mb-2 p-2">
            <p>End Time</p>
            <p>@Model.End.ToString(@"hh\:mm")</p>
          </div>
        </div>
        <div class="right-content col-9">
          <h3 class="fw-bold">Personal data</h3>
          <div class="field rounded-2 mb-4 p-2">
            <p>Name</p>
            <p>@Model.Name</p>
          </div>
          <div class="single-row mb-4 d-flex justify-content-between ">
            <div class="field  rounded-2 mb-2 p-2">
              <p>National ID</p>
              <p>@Model.NationalId</p>
            </div>
            <div class="field rounded-2 mb-2 p-2">
              <p>Nationality</p>
              <p>@Model.Nationality</p>
            </div>
          </div>
          <div class="single-row mb-4 d-flex justify-content-between ">
            <div class="field rounded-2 mb-2 p-2">
              <p>Birthdate</p>
              <p>@Model.BirthDate.ToString("dd-MM-yyyy")</p>
            </div>
            <div class="field rounded-2 mb-2 p-2">
              <p>Gender</p>
              <p>@Model.Gender</p>
            </div>
          </div>
          <div class="field rounded-2 mb-4 p-2">
            <p>Address</p>
            <p>@Model.Address</p>
          </div>
          <h3 class="fw-bold">Contact</h3>
          <div class="field rounded-2 mb-4 p-2">
            <p>E-mail</p>
            <p>@Model.Email</p>
          </div>
          <div class="single-row mb-4 d-flex justify-content-between ">
            <div class="field rounded-2 mb-2 p-2">
              <p>Contact Number</p>
              <p>@Model.ContactNumber</p>
            </div>
            <div class="field rounded-2 mb-2 p-2">
              <p>Contract Date</p>
              <p>@Model.ContractDate.ToString("dd-MM-yyyy")</p>
            </div>
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-between offset-3 col-6 align-content-center">
        <a asp-action="Delete" asp-route-id="@Model.Id" onclick="popup()" class="btn btn-outline-danger w-25">Delete</a>
        <a asp-action="Edit" asp-route-id="@Model.Id"  class="btn btn-outline-primary w-25">Edit</a>
        <a asp-action="Index" class="btn btn-outline-secondary w-25">Back to list</a>
      </div>
  </div>
<style>
    p{
        font-size:1.2em;
        font-weight:600;
        color:black;
    }
    .left-content img {
  border: 1px solid black;
}
.left-content .text-primary{
  background-color: rgba(235, 235, 235, 0.867);
  border-radius: 25px;
  font-weight: 700;
}
.field{
  background-color: rgba(235, 235, 235, 0.867);
}
.single-row .field{
  width: 48%;
}
</style>
@section Scripts{
    <script>
function popup() {
    var check = confirm("Do you want to Delete This Employee?");
    if (!check)
    {
        event.preventDefault();
    }

}
    </script>
 <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}