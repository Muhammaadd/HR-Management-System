@model RegisterViewModel
@{
    Layout=null;
}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Register</title>
  <base href="/">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
  <link rel="icon" type="image/x-icon" href="favicon.ico">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body>
    <section class="bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img7.webp');">
  <div class="mask d-flex align-items-center gradient-custom-3">
    <div class="container  ">
      <div class="row d-flex justify-content-center align-items-center ">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Hr System Sign Up</h2>
              <form asp-action="Register" method="post" >
                <div class="form-outline mb-4">
                  <input asp-for="Name" placeholder="Name"  class="form-control form-control-lg" />
                  <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-outline mb-4">
                  <input placeholder="Username" asp-for="UserName" class="form-control form-control-lg" />
                  <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
                <div class="form-outline mb-4">
                  <input placeholder="Email address" asp-for="Email" class="form-control form-control-lg" />
                  <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                
                <div class="form-outline mb-4">
                  <input  asp-for="Password" placeholder="Password" class="form-control form-control-lg" />
                  <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                
                <div class="form-outline mb-4">
                <input asp-for="ConfirmPassword" placeholder="Confirm password" class="form-control form-control-lg" />
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
                
                <div class="form-outline mb-4">
                  <input asp-for="PhoneNumber" placeholder="Phone number"  class="form-control form-control-lg" />
                  <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                </div>
                
               
                <div class="d-flex justify-content-center">
                  <input  type="submit" class="btn btn-outline-primary mt-4 col-4 btn-block btn-lg gradient-custom-4 text-body" value="Register">
                </div>
                <p class="text-center text-muted mt-5 mb-0">Have already an account?
                  <a asp-action="Login" class="text-dark-50 fw-bold"><u>Login here</u></a></p>
              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
   <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>