
@model ExceptionAttendance    
@{
    SelectList EmployeeList = new SelectList(ViewBag.AllEmployees,"Id","Name");
}
<div class="card">
    <div class="card-header">
        <div class="card-title-wrap bar-success">
            <h4 class="card-title">Request A Form</h4>
        </div>
    </div>
    <div class="card-body">
        <div class="px-3">
            <form class="form form-horizontal" asp-action="Save">
            <div class="form-body">
                <div class="form-group row">
                    <label class="col-md-3 label-control" for="projectinput7">Employee Name : </label>
                    <div class="col-md-9">
                        <select class="form-select form-control" asp-for="EmployeeId" asp-items="EmployeeList">
                        <option value="0">Select Employee</option></select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 label-control" for="projectinput9">Date: </label>
                    <div class="col-md-9">
                        <div class="position-relative has-icon-left">
                            <input asp-for="Date" class="form-control">
                            <div class="form-control-position">
                                <i class="ft-message-square"></i>
                            </div>
                            <span class="text-danger" asp-validation-for="Date"></span>
                        </div>
                    </div>
                </div>
            </div>
                <div class=" row">
                <div class="col-md-12">
                    <div class=" row form-group">
                    <label class="col-md-3 label-control">Start time: </label>
                    <div class="position-relative has-icon-left col-lg-9">
                        <input asp-for="Start" class="form-control" >
                        <div class="form-control-position">
                            <i class="ft-clock"></i>
                        </div>
                        <span class="text-danger" asp-validation-for="End"></span>
                    </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class=" row form-group">
                    <label class="col-md-3 label-control">End time: </label>
                    <div class="position-relative has-icon-left col-lg-9">
                        <input asp-for="End" class="form-control">
                        <div class="form-control-position">
                            <i class="ft-clock"></i>
                        </div>
                        <span class="text-danger" asp-validation-for="End"></span>
                    </div>
                    </div>
                </div>
                </div>
            <div class="form-actions">
                <a asp-action="Index" asp-controller="Attendance" class="btn btn-danger mr-1">
                <i class="icon-trash"></i> Cancel
                </a>
                <button type="submit" class="btn btn-success">
                <i class="icon-note"></i> Save
                </button>
            </div>              
             
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}